<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="messageReceiver" class="by.epam.spring.impl.ConfigurableMessageReceiver" c:message="Hello from config!"/>
    <bean id="messageRenderer" class="by.epam.spring.impl.ConsoleMessageRenderer" p:messageReceiver-ref="messageReceiver"/>
</beans>